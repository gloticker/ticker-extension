{
  "manifest_version": 3,
  "name": "gloticker",
  "version": "1.0.0",
  "description": "글로벌 경제 지표를 한눈에 보는 익스텐션",
  "icons": {
    "16": "logo/icon16.png",
    "32": "logo/icon32.png",
    "180": "logo/icon180.png",
    "192": "logo/icon192.png",
    "512": "logo/icon512.png"
  },
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "logo/icon16.png",
      "32": "logo/icon32.png"
    }
  },
  "side_panel": {
    "default_path": "index.html"
  },
  "permissions": ["storage"],
  "host_permissions": [
    "wss://streamer.finance.yahoo.com/",
    "https://*.finance.yahoo.com/*",
    "https://api.coinmarketcap.com/*",
    "https://api.binance.com/*",
    "https://logo.clearbit.com/*",
    "https://cryptoicons.org/*",
    "https://s2.coinmarketcap.com/*",
    "https://s3.polygon.io/*",
    "https://flagcdn.com/*"
  ],
  "background": {
    "service_worker": "src/background.ts",
    "type": "module"
  }
}
